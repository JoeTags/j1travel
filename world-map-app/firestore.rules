
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /agents/{agentId} {
      // Allow public read access to agents collection and individual documents
      allow read: if true;

      // Allow write access only for authenticated users
      allow write: if request.auth != null;
    }

    // Allow queries on the entire "agents" collection
    match /agents {
      allow list: if true; // Permit public list access to the collection
    }
  }
}




