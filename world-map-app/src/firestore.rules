// Firestore rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /agents/{agentId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }
  }
}

// Storage rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /visas/{agentId}/{fileName} {
      allow read: if false; // Prevent public access
      allow write: if request.auth != null && request.auth.uid == agentId;
    }
    match /photos/{agentId}/{fileName} {
      allow read: if true; // Allow public read access to photos
      allow write: if request.auth != null && request.auth.uid == agentId;
    }
  }
}
